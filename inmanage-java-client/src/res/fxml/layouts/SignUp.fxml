<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="400.0" minWidth="600.0" prefHeight="768.0" prefWidth="1024.0"
            xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.gui.layouts.SignUp">
    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <GridPane alignment="CENTER" minHeight="60.0" BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="60.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#turnOff" pickOnBounds="true"
                           preserveRatio="true" GridPane.columnIndex="2">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                    <Image url="@../../img/power-button-off.png"/>
                </ImageView>
                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <GridPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </GridPane.margin>
                    <Image url="@../../img/inManage_150px.png"/>
                </ImageView>
                <Label text="Create User" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                       GridPane.valignment="CENTER">
                  <font>
                      <Font size="36.0"/>
                  </font>
                </Label>
            </GridPane>
        </top>
        <center>
            <VBox maxWidth="200.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                <Pane prefHeight="100.0"/>
                <TextField fx:id="usernameInput" promptText="Desired Username">
                  <VBox.margin>
                      <Insets left="20.0" right="20.0" top="20.0"/>
                  </VBox.margin>
                </TextField>
                <TextField fx:id="passwordInput" layoutX="10.0" layoutY="10.0" promptText="Desired Password">
                  <VBox.margin>
                      <Insets left="20.0" right="20.0" top="20.0"/>
                  </VBox.margin>
                </TextField>
                <TextField fx:id="passwordConfirmInput" layoutX="10.0" layoutY="35.0" promptText="Confirm Password">
                  <VBox.margin>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                  </VBox.margin>
                </TextField>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                    <Button mnemonicParsing="false" onAction="#cancel" text="Cancel">
                        <HBox.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0"/>
                        </HBox.margin>
                    </Button>
                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#signup" text="Sign up">
                        <HBox.margin>
                            <Insets bottom="20.0" left="20.0" right="20.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
